

<% if @book.errors.any? %>
  <div class="alert alert-warning">
  <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "attachment user profile_image fallback", fallback: "no_image.jpg", size:'60x60'%>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @user.id == current_user.id %>
          <%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_12040"%>
          <% else %>
          <%= link_to "", user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_12040"%>
          <% end %>
        </div>
    <h2>New book</h2>
    <%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <br><br>
    <%= f.submit 'Create Book'%>
    <% end %>
    </div>


<div class="col-xs-9">
<h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      </tr>
    </thead>

    <tbody>
      <% @user.books.each do |book| %>
        <tr>
        <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60,60, class: "attachment user profile_image fallback", fallback: "no_image.jpg", size:'60x60'),user_path(book.user_id) %>
        </td>
        <td>
        <%= link_to book.title, book_path(book) %>
        </td>
        <td>
        <%= book.body %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
</div>



